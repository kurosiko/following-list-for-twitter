{
	"manifest_version": 2,
	"name": "instant share for twitter",
	"version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["main.js"]
            }
        ],
	"permissions": [
        "<all_urls>",
        "activeTab",
        "webRequest"
    ]
}